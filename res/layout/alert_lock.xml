<?xml version="1.0" encoding="utf-8"?>
<com.example.test.view.AlertViewByLock  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/window_bg"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="10dp"
    >
    
    <LinearLayout 
        android:id="@+id/ll_delete_layout"
        android:layout_width="match_parent"
	    android:layout_height="match_parent" 
	    android:layout_gravity="center_vertical"
	    android:layout_marginStart="10dp"
	    android:orientation="vertical"
        >
	    <TextView 
	            android:id="@+id/tv_msgInfo_lock"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="6dp"
	            android:text="@string/sd_no_space_by_lock"
	            android:textSize="@dimen/msgInfo_textSize"
	        />
	    
	    <include layout="@layout/update_space_layout"
	        android:layout_width="match_parent"
	        android:layout_height="80dp"
	        android:layout_marginTop="10dp"
	        android:id="@+id/alert_lock_update_space_layout"/>
   
	    <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:layout_marginTop="5dp"
	      >
	        <CheckBox
	            android:id="@+id/cb_ifDelete_lock"
	            android:layout_width="@dimen/checkBox_Size"
	            android:layout_height="@dimen/checkBox_Size"
	            android:layout_gravity="center_vertical|start"
	            android:scaleX="1"
	            android:scaleY="1"
	            android:gravity="center"
	            android:layout_marginLeft="15dp"
	            />
	        <TextView 
	            android:id="@+id/tv_ifDelete_lock"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="15dp"
	            android:layout_gravity="center_vertical"
	            android:gravity="center"
	            android:text="@string/if_Delete_lock_str"
	            android:textSize="@dimen/checkBox_textSize"
	            />
	    </LinearLayout>
    
	    <RelativeLayout 
	             android:layout_width="match_parent"
	             android:layout_height="wrap_content"
	             android:layout_marginTop="8dp"
	       >
	        <Button 
	             android:id="@+id/btn_info_ok_lock"
	             android:layout_height="wrap_content"
	             android:layout_width="@dimen/space_no_enough_test_btn_width"
	             android:layout_alignParentLeft="true"
	             android:layout_marginLeft="15dp"
	             
	             android:background="@drawable/save_btn_bg"  
	             android:text="@string/info_ok_str"
	             android:textSize="@dimen/window_btn_test_textSize"
	            />
	     
	        <Button 
	            android:id="@+id/btn_info_delete_all_lock"
	            android:layout_height="wrap_content"
	            android:layout_width="@dimen/space_no_enough_test_btn_width"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/save_btn_bg" 
	            android:text="@string/info_delete_all"
	            android:textSize="@dimen/window_btn_test_textSize"
	            />
	        
	        <Button 
	             android:id="@+id/btn_enter_folder_lock"
	             android:layout_height="wrap_content"
	             android:layout_width="@dimen/space_no_enough_test_btn_width"
	             android:layout_alignParentRight="true"
	             android:layout_marginRight="15dp"	             
	             android:text="@string/watch_video"
	             android:textSize="@dimen/window_btn_test_textSize"     
	             android:background="@drawable/save_btn_bg"         
	             />                
	    </RelativeLayout>
    
	    <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="10dp" 
	            android:orientation="horizontal"
	        >
	        <TextView 
	            android:layout_marginStart="15dp"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_gravity="start|top"
	            android:gravity="start|top"
	            android:text="@string/tips_str"
	            android:textSize="@dimen/tip_textSize"
	            />
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:orientation="vertical"
	            android:layout_marginStart="15dp"
	            >
	            <TextView 
	                android:id="@+id/tv_tips1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/dir_first_str"
	                android:layout_gravity="start"
	                android:gravity="start|center_vertical"
	                android:textSize="@dimen/tip_textSize"
	                />
	             <TextView 
	                android:id="@+id/tv_tips2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/dir_second_str"
	                android:layout_gravity="start"
	                android:gravity="start|center_vertical"
	                android:textSize="@dimen/tip_textSize"
	                />
	        </LinearLayout>
	        
        </LinearLayout>
        
    </LinearLayout>
    
    <RelativeLayout
            android:id="@+id/rl_pb_tv_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:orientation="vertical"
         >
	     <ProgressBar 
	         android:id="@+id/pb_deleteVideo"
	         style="?android:attr/progressBarStyleInverse"
	         android:layout_height="120dp"
	         android:layout_width="120dp"
	         android:layout_centerHorizontal="true"
	         android:layout_marginTop="40dp"
	         android:layout_alignParentTop="true"
	         />    
        
	    <TextView 
	        android:id="@+id/tv_deleteVideo_info"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        android:layout_marginTop="20dp"
	        android:layout_below="@+id/pb_deleteVideo"
	        android:textSize="18sp"
	        />
       </RelativeLayout>

</com.example.test.view.AlertViewByLock>
