<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	>

    <TextureView
        android:id="@+id/mTextureView0"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
         />
	<TextureView 
	    android:id="@+id/mTextureView1"
	    android:layout_height="@dimen/pic_in_pic_height"
	    android:layout_width="@dimen/pic_in_pic_width"
	    android:layout_alignParentTop="true"
	    android:layout_alignParentRight="true"
	    />
	
	<com.example.test.CaptureAnimationOverlay 
	    android:id="@+id/capture_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
	    />
	
	<include 
	    layout="@layout/control_item"
	    android:layout_height="match_parent"
	    android:layout_width="105dp"
	    android:layout_alignParentLeft="true"
	    android:id="@+id/layout_control"
	    />
    <include 
        layout="@layout/time_layout"
        android:id="@+id/layout_time"
        android:layout_height="40dp"
        android:layout_width="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
